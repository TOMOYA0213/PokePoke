<h1 style="text-align: center; font-size: 32px; font-weight: bold; color: black; margin-top: 40px;">ポケモン検索</h1>

<div style="display: flex; justify-content: center; align-items: center; height: 50vh; position: relative;">
  <!-- 左側の画像 -->
    <div style="position: absolute; left: 5vw; top: 50%; transform: translateY(-50%);">
      <%= image_tag 'left_image.png', alt: '左の画像', style: 'width: 20vw; height: auto; border-radius: 50%;' %>
    </div>

  <!-- フォーム -->
  <%= form_with url: search_path, method: :post, style: 'width: 100%; max-width: 500px; text-align: center;' do |form| %>
    <div style="margin-bottom: 20px;">
      <%= form.label :pokemon_name, 'ポケモンの名前を入力してください', style: 'font-size: 20px; font-weight: bold; color: black;' %>
    </div>
    <div style="margin-bottom: 20px;">
      <%= form.text_field :pokemon_name, style: 'font-size: 18px; padding: 10px; width: 100%; border: 1px solid #ccc; border-radius: 5px;' %>
    </div>
    <div>
      <%= form.submit '検索', style: 'font-size: 18px; padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer; width: 100%;' %>
    </div>
  <% end %>

  <!-- 右側の画像 -->
     <div style="position: absolute; right: 5vw; top: 50%; transform: translateY(-50%);">
      <%= image_tag 'right_image.png', alt: '右の画像', style: 'width: 20vw; height: auto; border-radius: 50%;' %>
     </div>
</div>

<%= link_to 'お気に入り一覧', favorites_path, 
  class: 'btn btn-secondary', 
  style: 'margin-top: 20px; display: block; text-align: center; 
          font-size: 18px; font-weight: bold; color: white; 
          background-color: #1e90ff; padding: 10px 20px; 
          border: none; border-radius: 5px; 
          text-decoration: none; width: 200px; margin: 20px auto; 
          cursor: pointer;' %>


          <div style="text-align: center; margin-top: 20px;">
  <%= link_to 'おまけ: ポケモンシルエットクイズ', select_quiz_range_path, style: 'font-size: 18px; font-weight: bold; color: #007BFF; text-decoration: none; padding: 10px; display: inline-block; border: 1px solid #007BFF; border-radius: 5px;' %>
</div>
