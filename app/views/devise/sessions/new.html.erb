<h1 style="text-align: center; font-size: 32px; font-weight: bold; color: black; margin-top: 40px;">ログイン</h1>

<div style="display: flex; justify-content: center; align-items: center; height: 70vh; position: relative;">
<!-- 左側の画像 -->
<div style="position: absolute; left: 5vw; top: 50%; transform: translateY(-50%);">
  <%= image_tag 'login.webp', alt: '左の画像', style: 'width: 20vw; height: auto; border-radius: 300%;' %>
</div>

  <!-- フォーム -->
  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true, style: 'width: 100%; max-width: 500px; text-align: center;' do |f| %>
    <div style="margin-bottom: 20px;">
      <%= f.label :email, 'メールアドレスを入力してください', style: 'font-size: 20px; font-weight: bold; color: black;' %>
    </div>
    <div style="margin-bottom: 20px;">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'font-size: 18px; padding: 10px; width: 100%; border: 1px solid #ccc; border-radius: 5px;' %>
    </div>
    <div style="margin-bottom: 20px;">
      <%= f.label :password, 'パスワードを入力してください', style: 'font-size: 20px; font-weight: bold; color: black;' %>
    </div>
    <div style="margin-bottom: 20px;">
      <%= f.password_field :password, autocomplete: "current-password", style: 'font-size: 18px; padding: 10px; width: 100%; border: 1px solid #ccc; border-radius: 5px;' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div style="margin-bottom: 20px; text-align: center;">
        <%= f.check_box :remember_me, style: 'margin-right: 10px;' %>
        <%= f.label :remember_me, 'ログイン状態を保持する', style: 'font-size: 16px; font-weight: bold;' %>
      </div>
    <% end %>

    <div>
      <%= f.submit 'ログイン', style: 'font-size: 18px; padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer; width: 100%;' %>
    </div>
  <% end %>

  <!-- 右側の画像 -->
     <div style="position: absolute; right: 5vw; top: 50%; transform: translateY(-50%);">
      <%= image_tag 'login.webp', alt: '右の画像', style: 'width: 20vw; height: auto; border-radius: 50%;' %>
     </div>
</div>

<div style="text-align: center; margin-top: 20px;">
  <%= link_to '新規登録', new_user_registration_path, style: 'font-size: 18px; font-weight: bold; text-decoration: none; color: #4CAF50;' %>
</div>
